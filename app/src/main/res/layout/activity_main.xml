<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siddh.currencyconverter.MainActivity">

    <EditText
        android:id="@+id/amount"
        android:layout_width="349dp"
        android:layout_height="46dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="119dp"
        android:layout_height="60dp"
        android:onClick="buttonConvert"
        android:text="Convert"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/rateExchange"
        android:layout_marginLeft="133dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/rateExchange"
        android:layout_width="351dp"
        android:layout_height="39dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter Exchange Rate"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount" />

</android.support.constraint.ConstraintLayout>
